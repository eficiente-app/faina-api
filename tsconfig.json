{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@config/*": ["config/*"],
      "@helpers/*": ["helpers/*"],
      "@models/*": ["models/*"],
      "*": [
        "node_modules/*",
        "types/*"
      ]
    }
  },
  "include": [
    "**/*",
    "index.ts"
  ]
}
